{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nest.js Application",
      "program": "${workspaceFolder}/node_modules/.bin/nest",
      "args": [
        "start",
        "--debug",
        "0.0.0.0:9229"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}